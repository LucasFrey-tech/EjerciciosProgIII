{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true, // Cambiado a true para forzar tipos explícitos
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node", // Añadido para resolver módulos
    "esModuleInterop": true // Añadido para compatibilidad con módulos
  },
  "include": ["src/**/*"], // Añadido para incluir todos los archivos en src
  "exclude": ["node_modules", "dist"]
}